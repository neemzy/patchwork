{
    "name": "neemzy/patchwork",
    "description": "PHP 5.4+ full-stack web framework",

    "minimum-stability": "dev",
    "prefer-stable": true,

    "require": {
        "neemzy/patchwork-core": "~1.0",
        "neemzy/share-extension": "~0.2"
    },

    "require-dev": {
        "phpunit/phpunit": "~4.4",
        "behat/mink-extension": "~2.0@dev",
        "behat/mink-goutte-driver": "~1.1",
        "behat/mink-selenium2-driver": "~1.2"
    },

    "autoload": {
        "psr-4": {
            "Pizza\\": "app/src/",
            "Pizza\\Tests\\": "app/tests/unit/",
            "": "app/tests/functional/bootstrap/"
        }
    },

    "scripts": {
        "post-install-cmd": "npm install"
    }
}
