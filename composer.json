{
    "minimum-stability": "dev",
    "post-install-cmd": "npm install",
    "post-install-cmd": "gulp",

    "repositories": [
        {
            "type": "vcs",
            "url": "https://bitbucket.org/neemzy/patchwork-core.git"
        }
    ],

    "require": {
        "neemzy/patchwork-core": "*",
        "neemzy/share-extension": "dev-master"
    },

    "require-dev": {
        "phpunit/phpunit": "dev-master",
        "behat/mink-extension": "2.0.*@dev",
        "behat/mink-goutte-driver": "*",
        "behat/mink-selenium2-driver": "*"
    },

    "autoload": {
        "psr-4": {
            "Pizza\\": "app/src/",
            "Pizza\\Tests\\": "app/tests/unit/",
            "": "app/tests/functional/bootstrap/"
        }
    },

    "scripts": {
        "post-install-cmd": "npm install"
    }
}
