{% extends "admin/layout.twig" %}

{% block main %}

    <div class="page-header"><h1>Liste des posts</h1></div>

    {% if app.session.hasFlash('message') %}
        <div class="alert alert-success">
            {{ app.session.getFlash('message') }}
        </div>
    {% endif %}

    {% if posts is defined and posts|length %}
        <ul class="nav nav-tabs nav-stacked">
            {% for post in posts %}
                <li>
                    <div class="btn-group">
                        {% if not loop.first %}<a class="btn btn-small" href="{{ path('post.move', { 'id': post.id, 'up': 1 }) }}" title="Monter"><i class="icon-arrow-up"></i></a>{% endif %}
                        {% if not loop.last %}<a class="btn btn-small" href="{{ path('post.move', { 'id': post.id, 'up': 0 }) }}" title="Descendre"><i class="icon-arrow-down"></i></a>{% endif %}
                        <a class="btn btn-small" href="{{ path('post.form', { 'id': post.id }) }}" title="Modifier"><i class="icon-edit"></i></a>
                        <a class="btn btn-small" href="{{ path('post.delete', { 'id': post.id }) }}" onclick="return confirm('Êtes-vous sûr(e) ?');" title="Supprimer"><i class="icon-trash"></i></a>
                    </div>
				    {{ post.title }}
                </li>
            {% endfor %}
        </ul>
    {% else %}
        <p>Vous n'avez créé aucun post pour le moment.</p>
    {% endif %}

    <a class="btn btn-inverse pull-right" href="{{ path('post.form') }}"><i class="icon-white icon-pencil"></i> Ajouter un post</a>

{% endblock %}
